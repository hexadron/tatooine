h2.course_title= @course.name

.course-detail
  p.course_description= @course.description

  p.course_creator Creado por: #{ link_to @course.creator.name, @course.creator }

  - unless @enrolled
    = form_tag(enroll_course_path(@course), id: "enroll-course") do
      = submit_tag "Registrarse", class: "button"

  ul.menu.tabs
    li= link_to_javascript("Clases", data: { tab: "classes" }, class: 'current')
    li= link_to_javascript("Preguntas Frecuentes", data: { tab: "faq" })
    li= link_to_javascript("Comentarios", data: { tab: "feedbacks" })
  
  section.tabcontent#classes style="display: block"
    = render 'course_sessions/index'
  
  section.tabcontent#faq
    h2 Preguntas Frecuentes
    - if @course.faq
      == @course.faq
    - else
      p No hay preguntas frecuentes todav√≠a.
  
  section.tabcontent#feedbacks
    h2 Comentar
    - if @enrolled
      = render 'feedbacks/form'
    - else
      p Debes registrarte en el curso para poder realizar comentarios.
      
    h2 Comentarios
    = render 'feedbacks/index'