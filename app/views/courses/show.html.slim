h2.course_title= @course.name

.course-detail
  p.course_description= @course.description

  p.course_creator Creado por: #{@course.creator.complete_name}

  - if current_user.courses.include?(@course)
    h2.yet_enrolled Actualmente est√°s llevando este curso
    
    section  
      h2 Enviar feedback
      = render 'feedbacks/form' 
      h2 Feedbacks
      = render 'feedbacks/index'
    
  - else
    = form_tag(enroll_course_path(@course)) do
      = submit_tag "Registrarse", class: "button"