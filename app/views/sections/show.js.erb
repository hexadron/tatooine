<%= render 'shared/alerts_to_js' %>

if (window.currentSection !== <%= @section.id %>) {
  
  $('.section-selected').removeClass('section-selected')
  $("#<%= @section.id %>").addClass('section-selected')
  
  var sect = $('.section-edit')
  sect.html("<%= escape_javascript render(@section) %>")
  sect.find('.tabs a').eq(0).trigger('click')
}

<% if @success %>
  $("#<%= @section.id %> a").text("<%= escape_javascript(@section.title) %>")
<% end %>

window.currentSection = <%= @section.id %>