<% unless flash.empty? %>
  <% if notice = flash[:notice] and notice != "" %>
    var html = $('<div class="notification"></div>').html("<p><%= escape_javascript notice %></p>")
    html.insertAfter('.header')
    Note.flash()
    // El flash sobrevive. Debe morir aquí u_u
    <% flash[:notice] = nil  %>
  <% end %>
  <% if alert = flash[:alert] and alert != "" %>
    var html = $('<div class="notification alert"></div>').html("<p><%= escape_javascript alert %></p>")
    html.insertAfter('.header')
    Note.flash()
    // El flash sobrevive. Debe morir aquí u_u
    <% flash[:alert] = nil  %>
  <% end %>
<% end %>